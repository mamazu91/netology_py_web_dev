version: '3.9'

services:
  db:
    image: postgres:alpine
    environment:
      - POSTGRES_DB=netology_stocks_products
      - POSTGRES_PASSWORD=password
  web:
    build: .
    command: bash -c "wait-for-it db:5432 -- cd ./stocks_products/ && python3 ./manage.py migrate && python3 /stocks_products/manage.py runserver 0.0.0.0:8000"
    volumes:
      - ./crud:/crud
    ports:
      - "8000:8000"
    depends_on:
      - db
